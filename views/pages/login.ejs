<form class="user" action="/user/login" method="post">
  <div class="form-group">
    <input type="email" class="form-control form-control-user" id="InputEmail" name="email" aria-describedby="emailHelp" placeholder="Enter Email..." required>
  </div>
  <div class="form-group">
    <input type="password" min="6" class="form-control form-control-user" id="InputPassword" name="password" placeholder="Password" required>
  </div>
  <button type="summit" class="btn btn-primary btn-user btn-block">
    Login
  </button>
  <hr>
</form>
